@model MyReadingsModel
@{
    ViewData["title"] = "Reading";
}

<div class="container">

    @* pega o Id *@
    <input type="hidden" asp-for="Id" />

    <div>
        <a asp-controller="MyReadings" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>

    <div class="mb-5 d-flex flex-column align-items-center">
        <input class="border-0 h1" asp-for="Title"/>
        <input class="border-0 fs-5" type="text" asp-for="Writer" />
    </div>
    <div class="d-flex flex-column">
        @* <input type="text" asp-for="Title" /> *@
        <div class="d-flex">
            <label class="h5 semmargin">Páginas:</label>
            <input class="border-0 fs-5" type="text" asp-for="Pages" />
        </div>
        <div class="d-flex">
            <label class="h5 semmargin">Data de Inicio da leitura:</label>
            <input class="border-0 fs-5" type="datetime" asp-for="Start" />
        </div>
        <div class="d-flex">
            <label class="h5 semmargin">Data de Finalizãção da leitura:</label>
            <input class="border-0 fs-5" type="datetime" asp-for="End" />
        </div>
        <div>
            <label class="h5 semmargin">Observações:</label>
            <textarea style="width:80vw;" rows="100" class="border-0 fs-5" type="text" asp-for="Obs"></textarea>
        </div>
    </div>

</div>





