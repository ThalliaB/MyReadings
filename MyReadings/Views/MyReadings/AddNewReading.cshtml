@{
    ViewData["title"] = "Add new Reading";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Add new Reading</h1>
    </div>

    <form>
        <div class="mb-3">
            <label for="Title" class="form-label text-light">Book title</label>
            <input type="text" class="form-control" id="Title" placeholder="Write the name of the book">
        </div>
        <div class="mb-3">
            <label for="Writer" class="form-label text-light">Writer</label>
            <input type="text" class="form-control" id="Writer" placeholder="Write the writer of the book">
        </div>
        <div class="mb-3">
            <label for="Pages" class="form-label text-light">Pages</label>
            <input type="number" class="form-control" id="Pages" placeholder="Write the number of the pages">
        </div> 
        <div class="mb-3">
            <label for="Start" class="form-label text-light">Start</label>
            <input type="datetime" class="form-control" id="Start" placeholder="Write the day started to read the book">
        </div>
        <div class="mb-3">
            <label for="End" class="form-label text-light">End</label>
            <input type="datetime" class="form-control" id="End" placeholder="Write the day ended to read the book">
        </div>
        <div class="mb-3">
            <label for="Obs" class="form-label text-light">Obs</label>
            <input type="text" class="form-control" id="Obs" placeholder="Write the Obs">
        </div>

        <div class="d-flex gap-5 mt-5">

            <button type="submit" class="btn btn-success w-50">Submit</button>
            <a class="btn btn-primary w-50" asp-controller="MyReadings" asp-action="Index">Back</a>
        </div>

    </form>
</div>